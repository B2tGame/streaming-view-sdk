{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./build/",
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["../network-information-types"],
    "lib": ["ESNext", "dom"],
    "target": "ES2021",
    "declaration": true,
    "allowJs": false
  },
  "include": ["src"],
  "exclude": ["**/*.tests.ts"]
}
